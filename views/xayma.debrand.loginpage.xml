<odoo>
    <data>
        <template id="xayma_login_layout" inherit_id="web.login_layout">
            <xpath expr="//div[@class='o_database_list']" position="replace">
                <div class="col-md-6 col-md-offset-3 o_database_list">
                    <div class="text-center">
                        <img t-attf-src="/web/binary/company_logo{{ '?dbname='+db if db else '' }}"/>
                    </div>
                    <t t-raw="0"/>
                    <div class="text-center" t-if="not disable_footer">
                        <a href="#" target="_blank">Powered by <span>Mansoft</span></a>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>